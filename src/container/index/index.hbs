{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}
<main>
  <section>
    <div class="form">
      <h1 class="form_title">Створити користувача</h1>
      <form method="POST" action="/user-create">
        <div class="form_content">
          <div class="form_field">
            <label for="email" class="form_label">Email:</label>
            <input type="email" class="form_input" name="email">
          </div>
          <div class="form_field">
            <label for="login" class="form_label">Нікнейм:</label>
            <input type="login" class="form_input" name="login">
          </div>
          <div class="form_field">
            <label for="password" class="form_label">Пароль:</label>
            <input type="password" class="form_input" name="password">
          </div>
          <button class="form_button">Створити</button>
        </div>
      </form>
    </div>
  </section>

  <section>
    <div class="form">
      <h1 class="form_title">Список користувачів</h1>
      <div class="user_list">
        {{#with data.users}}
        {{#if isEmpty}}
        <mark>Пустий</mark>
        {{else}}
        <ul>
          {{#each list}}
          <li>{{email}} | {{login}} | {{id}} <a href="/user-delete?id={{id}}">(видалити)</a></li>
          {{/each}}
        </ul>
        {{/if}}
        {{/with}}
      </div>
    </div>
  </section>

  <section>
    <div class="form">
      <h1 class="form_title">Оновити ппошту користувача</h1>
      <form method="POST" action="/user-update">
        <div class="form_content">

          <div class="form_field">
            <label for="id" class="form_label">ID:</label>
            <input type="id" class="form_input" name="id">
          </div>

          <div class="form_field">
            <label for="email" class="form_label">Нова email адреса:</label>
            <input type="email" class="form_input" name="email">
          </div>

          <div class="form_field">
            <label for="password" class="form_label">Пароль:</label>
            <input type="password" class="form_input" name="password">
          </div>
          <button class="form_button">Відправити</button>
        </div>
      </form>
    </div>
  </section>
</main>
