<main class="main">
    {{#with data}}
    <div class="main_content ">
        <h1 class="title title_center">
            Додати до плейліста
        </h1>
        <div class="bggrey">
            <ul class="track_list">
                {{#each tracks}}

                <li class="track">
                    <img src="{{image}}">
                    <div class="track_content">
                        <strong class="track_name">{{name}}</strong>
                        <em class="track_author">{{author}}</em>
                    </div>



                    <a class="add_button" href="/spotify-track-add?playlistId={{../playlistId}}&trackId={{id}}">
                        <img src="/svg/add_button1.svg " alt="+">
                    </a>
                </li>



                {{/each}}
            </ul>

        </div>
    </div>
    {{/with}}
</main>