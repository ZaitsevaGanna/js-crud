{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}
<main>
  <section>
    <h1 class="form_title">Редагування товару</h1>
    <div class="form">
      <h2 class="form_title">Інформація про товар</h2>
      <form method="POST" action="/product-edit">
        {{#with data.product}}
        <div class="form_content">
          <div class="form_three_field">
            <div class="form_field">
              <label for="name" class="form_label">Назва товару</label>
              <input value="{{name}}" type="name" class="form_input" name="name">
            </div>
            <div class="form_field">
              <label for="price" class="form_label">Ціна</label>
              <input value="{{price}}" type="number" class="form_input" name="price">
            </div>
            <div class="form_field">
              <label for="id" class="form_label">ID</label>
              <input value="{{id}}" type="number" class="form_input" name="id">

            </div>
          </div>
          <div class="form_field">
            <label for="description" class="form_label">Короткий опис товару:</label>
            <textarea type="text" class="form_input" name="description" rows="3">{{description}}</textarea>
            <p>Відображується у картці товару</p>
          </div>

          <div class="form_double_field">
            <button class="form_button">Зберегти оновлення</button>
            <a href="/product-delete?id={{id}}" class="form_button button_red">Видалити товар</a>
          </div>
          {{/with}}
        </div>
      </form>
    </div>
  </section>


</main>
